generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Article {
  id        Int      @id @default(autoincrement())
  title     String
  author    String
  content   String
  views     Int      @default(0)
  shares    Int      @default(0)
  createdAt DateTime @default(now())
}

model Summary {
  articleId Int    @id
  summary   String

  article   Article @relation(fields: [articleId], references: [id])
}